<Application x:Class="TamponiInventario.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:TamponiInventario.Wpf.Converters"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
    <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter" />

    <Color x:Key="CardBackground">#FFFFFF</Color>
    <Color x:Key="CardBorder">#E2E8F0</Color>
    <Color x:Key="MutedText">#6B7280</Color>
    <Color x:Key="PillOk">#16A34A</Color>
    <Color x:Key="PillWarn">#F59E0B</Color>
    <Color x:Key="PillError">#EF4444</Color>

    <SolidColorBrush x:Key="MutedBrush" Color="{StaticResource MutedText}" />

    <Style x:Key="CardBorderStyle" TargetType="Border">
      <Setter Property="Background" Value="{StaticResource CardBackground}" />
      <Setter Property="BorderBrush" Value="{StaticResource CardBorder}" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="16" />
      <Setter Property="Padding" Value="16" />
      <Setter Property="Margin" Value="0" />
    </Style>

    <Style x:Key="MutedTextStyle" TargetType="TextBlock">
      <Setter Property="Foreground" Value="{StaticResource MutedBrush}" />
    </Style>

    <Style x:Key="PillBase" TargetType="Border">
      <Setter Property="CornerRadius" Value="12" />
      <Setter Property="Padding" Value="8,4" />
      <Setter Property="Margin" Value="0,0,6,0" />
    </Style>

    <Style x:Key="PillOkStyle" TargetType="Border" BasedOn="{StaticResource PillBase}">
      <Setter Property="Background" Value="{StaticResource PillOk}" />
    </Style>

    <Style x:Key="PillWarnStyle" TargetType="Border" BasedOn="{StaticResource PillBase}">
      <Setter Property="Background" Value="{StaticResource PillWarn}" />
    </Style>

    <Style x:Key="PillErrorStyle" TargetType="Border" BasedOn="{StaticResource PillBase}">
      <Setter Property="Background" Value="{StaticResource PillError}" />
    </Style>

    <Style x:Key="PillText" TargetType="TextBlock">
      <Setter Property="Foreground" Value="White" />
      <Setter Property="FontWeight" Value="SemiBold" />
    </Style>
  </Application.Resources>
</Application>
