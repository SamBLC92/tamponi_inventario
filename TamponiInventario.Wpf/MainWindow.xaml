<Window x:Class="TamponiInventario.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:TamponiInventario.Wpf.ViewModels"
        xmlns:views="clr-namespace:TamponiInventario.Wpf.Views"
        mc:Ignorable="d"
        Title="Tamponi Inventario" Height="820" Width="1200" Background="#F8FAFC">
  <Window.DataContext>
    <viewModels:MainViewModel />
  </Window.DataContext>

  <DockPanel Margin="16">
    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,12">
      <TextBlock Text="Tamponi Inventario" FontSize="24" FontWeight="Bold" />
      <TextBlock Text="Gestione tamponi, scansioni e storico movimenti." Style="{StaticResource MutedTextStyle}" />
    </StackPanel>

    <TabControl>
      <TabItem Header="Tamponi">
        <views:SwabsView DataContext="{Binding Swabs}" />
      </TabItem>
      <TabItem Header="Storico">
        <views:HistoryView DataContext="{Binding History}" />
      </TabItem>
      <TabItem Header="Scansione">
        <views:ScanView DataContext="{Binding Scan}" />
      </TabItem>
      <TabItem Header="Admin">
        <views:AdminView DataContext="{Binding Admin}" />
      </TabItem>
    </TabControl>
  </DockPanel>
</Window>
