<Window x:Class="TamponiInventario.Wpf.Views.LoginDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Accesso Admin"
        Height="220"
        Width="360"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Inserisci la password admin per continuare."
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,12" />

        <PasswordBox x:Name="PasswordBox"
                     Grid.Row="1"
                     Margin="0,0,0,8"
                     Width="300" />

        <TextBlock x:Name="ErrorText"
                   Grid.Row="2"
                   Foreground="#B71C1C"
                   Visibility="Collapsed"
                   Text="Password errata. Riprova."
                   Margin="0,0,0,8" />

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Annulla"
                    Width="100"
                    Margin="0,0,8,0"
                    Click="Cancel_Click" />
            <Button Content="Accedi"
                    Width="100"
                    Click="Login_Click" />
        </StackPanel>
    </Grid>
</Window>
